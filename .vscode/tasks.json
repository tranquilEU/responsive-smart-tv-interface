{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "pnpm install",
			"options": {
				"cwd": "${workspaceFolder}",
				"statusbar": {
					"label": "$(package) Install Deps",
					"running": {
						"color": "#4CAF50",
						"label": "$(sync) Installing Deps"
					},
					"detail": "Install Project Dependencies"
				}
			}
		},
		{
			"label": "Start App",
			"type": "shell",
			"command": "pnpm run start",
			"options": {
				"cwd": "${workspaceFolder}",
				"statusbar": {
					"label": "$(run) Start App",
					"running": {
						"color": "#22C1D6",
						"label": "$(triangle-right) App is Running"
					},
					"detail": "Start App"
				}
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Lint",
			"type": "shell",
			"command": "pnpm run lint",
			"options": {
				"cwd": "${workspaceFolder}",
				"statusbar": {
					"label": "$(debug) Lint",
					"detail": "Lint"
				}
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Type-check",
			"type": "shell",
			"command": "pnpm run type-check",
			"options": {
				"cwd": "${workspaceFolder}",
				"statusbar": {
					"label": "$(callstack-view-session) Type-check",
					"detail": "Type-check"
				}
			},
			"problemMatcher": "$tsc"
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "pnpm run build",
			"options": {
				"cwd": "${workspaceFolder}",
				"statusbar": {
					"label": "$(gift) Build",
					"detail": "Build"
				}
			},
			"isBackground": true,
			"problemMatcher": []
		}
	]
}
